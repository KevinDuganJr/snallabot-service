doctype html
html
  head
    title Snallabot Dashboard
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossOrigin="anonymous")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.3/sandstone/bootstrap.min.css" crossorigin="anonymous" referrerpolicy="no-referrer")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossOrigin="anonymous")
  body
    .container-fluid(style="margin-top: 8px;")
      .row.justify-content-center
        .col-md-8
          h4.text-center.mb-3 Select EA Account for Snallabot
          .card
            .card-body
              h5.card-title Which EA account should we use?
              form(action="/dashboard/selectLeague" method="POST")
                .mb-3
                  label.form-label(for="access") EA Access Token
                  input#access.form-control(type="text" name="access_token" value=access_token readonly=true aria-label="EA access token")
                  small.text-muted d-block.mt-1 This token is read-only — choose the persona below.
                if discord
                  .mb-3
                    label.form-label(for="discord") Discord League (debug)
                    input#discord.form-control(type="text" name="discord" value=discord readonly=true aria-label="Discord League (debug)")
                .mb-3
                  label.form-label(for="selectedPersona") Choose Persona
                  select#selectedPersona.form-select(name="selected_persona" required=true)
                    each persona in personas
                      option(value=`${JSON.stringify(persona)}`) #{persona.displayName} - #{namespaces[persona.namespaceName]} - #{persona.maddenEntitlement}
                .mb-3
                  label.form-label(for="consoleOverride") Console Override
                  select#consoleOverride.form-select(name="console_override")
                    each cons in all_consoles
                      option(value=`${cons}`) #{cons}
                .d-flex.justify-content-between.mt-3
                  a.btn.btn-outline-secondary(href="/dashboard") Back
                  button#submit.btn.btn-primary(type="submit") Submit EA Account